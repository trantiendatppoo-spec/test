-- [[ EMMA HUB V32 - ĐÈ BỆP NIGHTX - FIX NHẢY ĐỒ ]] --
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wall%20v3"))()

-- 1. TẠO UI MỚI (Xóa sổ thông tin NightX)
local Window = Library:CreateWindow("Emma Hub [PRO]", "Emma Hub Team", 101609700892539)

local Tab1 = Window:CreateTab("Auto Farm")
local Tab2 = Window:CreateTab("Settings")

-- 2. CẤU HÌNH LOGIC
_G.AutoFarm = false
_G.Weapon = "Melee"

Tab1:CreateDropdown("Chọn Vũ Khí", {"Melee", "Sword", "Fruit"}, function(v)
    _G.Weapon = v
end)

Tab1:CreateToggle("Bật Auto Farm Level", function(state)
    _G.AutoFarm = state
end)

-- 3. SIÊU LÕI FARM (ÁP SÁT + CHỐNG NHẢY ĐỒ)
task.spawn(function()
    while task.wait() do
        if _G.AutoFarm then
            pcall(function()
                local char = game.Players.LocalPlayer.Character
                local backpack = game.Players.LocalPlayer.Backpack
                
                -- Tự bật Haki
                if not char:FindFirstChild("HasBuso") then
                    game:GetService("ReplicatedStorage").Remotes.CommF_:InvokeServer("Buso")
                end

                -- Tìm quái
                for _, mob in ipairs(workspace.Enemies:GetChildren()) do
                    if mob:FindFirstChild("Humanoid") and mob.Humanoid.Health > 0 then
                        -- Bay sát quái
                        char.HumanoidRootPart.CFrame = mob.HumanoidRootPart.CFrame * CFrame.new(0, 10, 0)
                        
                        -- KHÓA VŨ KHÍ TUYỆT ĐỐI (Fix lỗi nhảy đồ)
                        local tool = backpack:FindFirstChild(_G.Weapon) or char:FindFirstChild(_G.Weapon)
                        if tool and not char:FindFirstChild(tool.Name) then
                            char.Humanoid:EquipTool(tool)
                        end
                        
                        -- Aura vả quái
                        local net = game:GetService("ReplicatedStorage").Modules.Net
                        net["RE/RegisterAttack"]:FireServer()
                        net["RE/RegisterHit"]:FireServer(mob.HumanoidRootPart, {{mob, mob.HumanoidRootPart}}, nil, nil, "EmmaV32")
                        break
                    end
                end
            end)
        end
    end
end)
